@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2>Delete Product</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h4>Are you sure you want to delete this product?</h4>
                        <p>This action cannot be undone.</p>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4 text-center">
                            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-thumbnail" style="max-height: 200px;" />
                        </div>
                        <div class="col-md-8">
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.Name</dd>
                                
                                <dt class="col-sm-4">Price:</dt>
                                <dd class="col-sm-8">@Model.Price.ToString("c")</dd>
                                
                                <dt class="col-sm-4">Description:</dt>
                                <dd class="col-sm-8">@Model.Details</dd>
                                
                                <dt class="col-sm-4">Trending:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsTrendingProduct)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Manage" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>