@model Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-5 pt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2>Create New Product</h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Product Name</label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Details" class="form-label">Description</label>
                            <textarea asp-for="Details" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Details" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <small class="text-muted">Enter a valid URL for the product image</small>
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Price" class="form-label">Price</label>
                            <div class="input-group">
                                <span class="input-group-text">$</span>
                                <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="IsTrendingProduct" class="form-check-input" type="checkbox" />
                            <label asp-for="IsTrendingProduct" class="form-check-label">Is Trending Product</label>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Manage" class="btn btn-secondary">Back to List</a>
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}