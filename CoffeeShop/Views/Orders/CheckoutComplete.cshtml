@{
    ViewData["Title"] = "Order Confirmation";
}

<div class="container mt-5">
    <div class="text-center">
        <div class="mb-4">
            <img src="https://cdn-icons-png.flaticon.com/512/148/148767.png" class="img-fluid"
                 style="width: 200px; height: 200px; margin-left: auto; margin-right: auto" alt="Order confirmed">
        </div>
        
        <div class="mb-4">
            <h1><strong>Thank you for your order!</strong></h1>
            @if (ViewBag.OrderId > 0)
            {
                <h5 class="mt-3">Your order #@ViewBag.OrderId has been received and is being processed.</h5>
            }
            else 
            {
                <h5 class="mt-3">Your order has been received and is being processed.</h5>
            }
        </div>
        
        <div class="alert alert-success mb-4">
            <p class="mb-0">A confirmation email has been sent to your email address.</p>
        </div>
        
        <div class="mt-4">
            @if (ViewBag.OrderId > 0)
            {
                <a class="btn btn-info me-2" asp-controller="Orders" asp-action="OrderDetails" asp-route-id="@ViewBag.OrderId">View Order Details</a>
            }
            <a class="btn btn-secondary me-2" asp-controller="Orders" asp-action="MyOrders">My Orders</a>
            <a class="btn btn-primary" asp-controller="Products" asp-action="Shop">Continue Shopping</a>
        </div>
    </div>
</div>