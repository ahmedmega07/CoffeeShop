@model List<Order>
@{
    ViewData["Title"] = "All Orders";
}

<div class="container mt-5 pt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>All Orders</h2>
        <div>
            <a asp-controller="AdminDashboard" asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>
    
    <hr />

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Email</th>
                        <th>Total</th>
                        <th>Items</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>#@order.Id</td>
                            <td>@order.OrderPlaced.ToString("MMM dd, yyyy HH:mm")</td>
                            <td>@order.FirstName @order.LastName</td>
                            <td>@order.Email</td>
                            <td>@order.OrderTotal.ToString("c")</td>
                            <td>@(order.OrderDetails?.Count ?? 0) items</td>
                            <td><span class="badge bg-success">Completed</span></td>
                            <td>
                                <a asp-controller="Orders" asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <p>No orders have been placed yet.</p>
        </div>
    }
</div>