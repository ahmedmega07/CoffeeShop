@page
@model IndexModel
@{
    ViewData["Title"] = "My Profile";
    ViewData["ActivePage"] = "Index";
}

<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post" class="mb-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="text-center mb-4">
                <div class="avatar-circle mx-auto mb-3">
                    <span class="initials">@(Model.Username?.Substring(0, 1).ToUpper() ?? "U")</span>
                </div>
                <h5>@Model.Username</h5>
            </div>

            <div class="mb-3">
                <label asp-for="Input.Username" class="form-label">Username</label>
                <input asp-for="Input.Username" class="form-control" disabled />
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.PhoneNumber" class="form-label">Phone number</label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button id="update-profile-button" type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card bg-light">
            <div class="card-body">
                <h5 class="card-title">Account Information</h5>
                <p class="card-text">
                    <small>
                        <strong>Email:</strong> @Model.Email<br />
                        <strong>Account created:</strong> @DateTime.Now.AddMonths(-3).ToString("MMM dd, yyyy")<br />
                    </small>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .avatar-circle {
            width: 80px;
            height: 80px;
            background-color: #6c757d;
            text-align: center;
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .initials {
            position: relative;
            font-size: 40px;
            color: #fff;
            font-weight: bold;
        }
    </style>
}